{
  $schema: 'https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json',
  appId: 'YourAppID',
  asar: true,
  productName: 'üçî-Pet',
  directories: {
    output: 'release/${version}'
  },
  files: ['dist', 'dist-electron'],
  extraResources: [
    {
      from: './public/compress-model.gltf',
      to: 'app/dist/compress-model.gltf'
    },
    {
      from: './public/lottie.js',
      to: 'app/dist/lottie.js'
    },
    {
      from: './public/Ê±âÂ†°.json',
      to: 'app/dist/Ê±âÂ†°.json'
    }
  ],
  mac: {
    icon: './build/icons/icon.icns',
    artifactName: '${productName}_${version}.${ext}',
    category: 'public.app-category.developer-tools', // Â∫îÁî®Á±ªÂà´
    target: ['dmg']
  },
  win: {
    target: [
      {
        target: 'nsis',
        arch: ['x64']
      }
    ],
    artifactName: '${productName}-Windows-${version}-Setup.${ext}'
  },
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: false
  },
  linux: {
    target: ['AppImage'],
    artifactName: '${productName}-Linux-${version}.${ext}'
  }
}
